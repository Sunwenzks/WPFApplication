<Window x:Class="WPFApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Введите свое имя" HorizontalAlignment="Center"  VerticalAlignment="Center" Foreground="Red"
               Width="120" Target="{Binding ElementName=textBox}"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap"  Width="120"  Name="textBox" Margin="0 30 0 0" />
        <Button Content="Ok" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,5,0,5" Click="Button_Click"/>
    </StackPanel>
</Window>
